<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMap" >

    <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:uiZoomControls="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_new_marker_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="60dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openAddScreen"
        android:src="@drawable/ic_add"
        app:backgroundTint="#009688" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/open_list_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="60dp"
        android:layout_toStartOf="@+id/add_new_marker_button"
        android:layout_toLeftOf="@+id/add_new_marker_button"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openListScreen"
        android:src="@drawable/ic_list"
        app:backgroundTint="#009688" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/open_ar_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="60dp"
        android:layout_toStartOf="@+id/open_list_button"
        android:layout_toLeftOf="@+id/open_list_button"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openARScreen"
        android:src="@drawable/artexticon"
        app:backgroundTint="#009688" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/open_favs_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="60dp"
        android:layout_toStartOf="@+id/open_ar_button"
        android:layout_toLeftOf="@+id/open_ar_button"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openFavScreen"
        android:src="@drawable/hearticon"
        app:backgroundTint="#009688" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/open_settings_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="125dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openSettingsScreen"
        android:src="@drawable/ic_settings"
        app:backgroundTint="#009688" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/filter_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openFilterScreen"
        android:src="@drawable/filter"
        app:backgroundTint="#009688" />


</RelativeLayout>